{
    "multipart": [
        {
            "apply": {
                "model": "minecraft:block/bookshelf"
            }
        },
        {
            "when": {"AND": [{"facing": "north"}, {"pressed": true}]},
            "apply": {
                "model": "infinitybuttons:block/secret_buttons/bookshelf_secret_button"
            }
        },
        {
            "when": {"AND": [{"facing": "east"}, {"pressed": true}]},
            "apply": {
                "model": "infinitybuttons:block/secret_buttons/bookshelf_secret_button",
                "y": 90
            }
        },
        {
            "when": {"AND": [{"facing": "south"}, {"pressed": true}]},
            "apply": {
                "model": "infinitybuttons:block/secret_buttons/bookshelf_secret_button",
                "y": 180
            }
        },
        {
            "when": {"AND": [{"facing": "west"}, {"pressed": true}]},
            "apply": {
                "model": "infinitybuttons:block/secret_buttons/bookshelf_secret_button",
                "y": 270
            }
        }
    ]
}